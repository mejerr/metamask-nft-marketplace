{
  "extends": "@tsconfig/svelte/tsconfig.json",

  "include": ["src/**/*", "./scripts"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "files": ["hardhat.config.ts"],

  "compilerOptions": {
  "target": "es2020",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true,
  "resolveJsonModule": true
  }

}
